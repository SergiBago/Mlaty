<Window x:Class="PGTA_WPF.MessageboxYesNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PGTA_WPF"
        mc:Ignorable="d"
        Title="Repeted File"  Height="135" Width="300" ResizeMode="NoResize" WindowStyle="None" Background="#FF464646" >
    <Grid >
 <Grid.ColumnDefinitions>
    <ColumnDefinition Width="5"/>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="5"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="35"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*" />
        <RowDefinition Height="5"/>
    </Grid.RowDefinitions>
    <Border x:Name="TopBar" Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="0" Background="#FF282828" MouseLeftButtonDown="MouseLeftButton_Down" />
    <Image Source="images/Error.png" Grid.Column="1" Width="30" Margin="-90,0,0,0" Grid.Row="0" Grid.ColumnSpan="2" Height="30"/>
    <Image Source="images/Close.png" Grid.Column="3" Grid.Row="0" Height="20" Cursor="Hand" Margin="-20,0,5,0"  MouseLeftButtonUp="CancelClick"/>
    <TextBlock Text="Warning"  Margin="40,0,0,0" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFBE0000" FontFamily="Microsoft Sans Serif" FontSize="24"/>
    <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Background="#FF464646"/>
        <TextBlock Text="The file name you entered already exists. Do you want to overwrite the file?" x:Name="Label" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Margin="10,5" Foreground="#FFB0BEA9" FontFamily="Microsoft Sans Serif"/>
    <Button Grid.Column="1" Grid.Row="2" Width="90" Height="25" HorizontalContentAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="Black" Cursor="Hand" Click="CalculateClick">
        <StackPanel Orientation="Horizontal" >
            <Image Source="images/RepetedFileOk.png" Height="20"/>
            <TextBlock Text="Save" Foreground="#FFB0BEA9" VerticalAlignment="Center" Margin="5,0,0,0" />
        </StackPanel>
    </Button>
    <Button Grid.Column="2" Grid.Row="2" Width="90" Height="25" HorizontalContentAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="Black" Cursor="Hand" Click="CancelClick">
        <StackPanel Orientation="Horizontal" >
            <Image Source="images/RepetedFileCancel.png" Height="16"/>
            <TextBlock Text="Cancel" Foreground="#FFB0BEA9" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
    </Button>
    </Grid>
</Window>
